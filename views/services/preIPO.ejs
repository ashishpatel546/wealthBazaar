        <tr>
          <th scope="col">S.No.</th>
          <th scope="col">Script Name</th>
          <th scope="col">Buying Price</th>
          <th scope="col">Selling Price</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody class="text-center">
        <% for(let ipo of IPOs) {%> 
        <tr>
          <th scope="row"> <%= +(IPOs.findIndex(item => ipo._id === item._id)) +1 %>  </th>
          <td class="fw-bold"><%= ipo.script_name %> </td>
          <td class="buyingP">₹ <%= ipo.buying_price %> </td>
          <td class="sellingP">₹ <%= ipo.selling_price %>  </td>
          <td>
            <div class="d-flex justify-content-center align-item-center">
              <% if(isAuthenticated) { %> 
              <a href="#" class="mybtn-sm-1">Buy It</a>
              <a href="#" class="mybtn-sm-2">Sell It</a>
              <% } %> 
              <a href="/ipo/<%= ipo._id %> " class="mybtn-sm-3">Know More...</a>
            </div>

          </td>
        </tr>
