<%- include('../layouts/head.ejs') %>
<link rel="stylesheet" href="/css/style.css">
    <title>Wealth Bazzar | <%= title%> </title>
  </head>

    <body>
        <%- include('../layouts/navbar.ejs') %>
        <% if(errorMessage){ %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error Occured</strong> <%= errorMessage %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
      <%  }%>

        <div class="container">
            <h1>Add an IPO</h1>
            <form action="/admin/addIPO", method="post">
                <input type="hidden", name="_csrf" value="<%= csrfToken %>">
                  <div class="mb-3">
                    <label for="script_name" class="form-label">Script Name</label>
                    <input type="text" class="form-control" id="script_name" name="script_name" >
                  </div>
                  <div class="mb-3">
                    <label for="buying_price" class="form-label">Byuing Price</label>
                    <input type="number" class="form-control" id="buying_price" name="buying_price">
                  </div>
                  <div class="mb-3">
                    <label for="selling_price" class="form-label">Selling Price</label>
                    <input type="number" class="form-control" id="selling_price" name="selling_price">
                  </div>
                  <div class="mb-3">
                    <label for="floatingTextarea">Description</label>
                    <textarea class="form-control" name="description" placeholder="Description" id="floatingTextarea"></textarea>
                  </div>
                  
                  <div class="mt-3 text-center">
                      <button type="submit" class="sub-button text-center">Add IPO ot list</button>
                  </div>
                </form>
        </div>


        
        <%- include('../layouts/footer.ejs') %>
        <% -include('../layouts/end.ejs') %>