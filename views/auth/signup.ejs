<%- include('../layouts/head.ejs') %>
<link rel="stylesheet" href="/css/style.css">
    <title>Wealth Bazzar | <%= title%> </title>
  </head>

    <body>
        <%- include('../layouts/navbar.ejs') %>
        <% if(validationErrors){ for(error of validationErrors ){ %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <strong>Error Occured</strong> <%= error.msg %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } }%>

        <div class="container signup pt-1 mt-5">
            <div class="container mt-3">
                <div class="container mt-2 text-center", style="width: 50%;">
                    <h3>Please Register Your Self</h3>
                </div>
    
                <div class="container mt-5", style="width: 50%;">
                    <form action="/signup", method="post">
                      <input type="hidden", name="_csrf" value="<%= csrfToken %>">
                        
                        <div class="mb-3">
                          <label for="name" class="form-label">Name</label>
                          <input type="text" class="form-control" id="name" name="name" required value = "<%= oldInput.name %>">
                          
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="Email" name="email" required value = "<%= oldInput.email %>"   aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                          </div>
                        <div class="mb-3">
                          <label for="mobile" class="form-label">Mobile</label>
                          <input type="text" class="form-control" id="mobile" name="mobile" required value = "<%= oldInput.mobile %>">
                        </div>
                        <div class="mb-3">
                          <label for="password" class="form-label">Password</label>
                          <input type="password" class="form-control" name="password" required id="password">
                        </div>
                        <div class="mb-3">
                          <label for="confirm_password" class="form-label">Confirm Password</label>
                          <input type="password" class="form-control" name="confirm_password" required id="ConfirmPassword1">
                        </div>
                        <div class="mt-3 text-center">
                            <button type="submit" class="sub-button text-center">Sign Up</button>
                        </div>
                      </form>
                </div>
    
            </div>
        </div>

    
        <%- include('../layouts/footer.ejs') %>
    <% -include('../layouts/end.ejs') %>