<%- include('../layouts/head.ejs') %>
<link rel="stylesheet" href="/css/style.css">
    <title>Wealth Bazzar | <%= title%> </title>
  </head>

    <body>
        <%- include('../layouts/navbar.ejs') %>
        <% if(validationErrors){ for(error of validationErrors ){ %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <strong>Error Occured</strong> <%= error.msg %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } }%> 

        <div class="container loginPage">
            <h1>Password Reset</h1>
            <div class="container mt-5", style="width: 50%;">
                <form action="/update-password", method="post">
                  <input type="hidden", name="_csrf" value="<%= csrfToken %>">
                  <input type="hidden", name="user_email" value="<%= user_email %>">
                  <input type="hidden", name="resetToken" value="<%= resetToken %>">
                   
                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="form-control" name="password" required id="password">
                    </div>
                    <div class="mb-3">
                      <label for="confirm_password" class="form-label">Confirm Password</label>
                      <input type="password" class="form-control" name="confirm_password" required id="ConfirmPassword1">
                    </div>
                    <div class="mt-3 text-center">
                        <button type="submit" class="sub-button text-center">Update Password</button>
                    </div>
                  </form>
            </div>
        </div>
    
        <%- include('../layouts/footer.ejs') %>
    <% -include('../layouts/end.ejs') %>