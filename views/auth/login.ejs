<%- include('../layouts/head.ejs') %>
<link rel="stylesheet" href="/css/style.css">
    <title>Wealth Bazzar | <%= title%> </title>
  </head>

    <body>
        <%- include('../layouts/navbar.ejs') %>
        <% if (errorMessage){ %> 
          <div class="alert alert-danger alert-dismissible fade show myalert_message" role="alert" >
            <strong><%= errorMessage %></strong> 
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <% } %> 

        <div class="container loginPage pt-1 mt-5">
            <h1>User Login</h1>
        <div class="container mt-5", style="width: 50%;">
            <form action="/login", method="post">
              <input type="hidden", name="_csrf" value="<%= csrfToken %>">
                <div class="mb-3">
                  <label for="Email" class="form-label">Email address</label>
                  <input type="email" class="form-control" id="Email" name="email" aria-describedby="emailHelp">
                  <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                  <label for="Password1" class="form-label">Password</label>
                  <input type="password" class="form-control" name="password" id="Password1">
                </div>
                <div class="mb-3 form-check">
                  <input type="checkbox" class="form-check-input" id="exampleCheck1">
                  <label class="form-check-label" for="exampleCheck1">Remeber Password</label>
                </div>
                <div class="mt-3 text-center">
                 
                    <button type="submit" class="sub-button text-center">Login</button>
                </div>
              </form>
              <p>Forgot Password <a href="/reset"> reset here</a></p>
        </div>
        </div>
    
        <%- include('../layouts/footer.ejs') %>
    <% -include('../layouts/end.ejs') %>